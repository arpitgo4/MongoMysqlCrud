<!DOCTYPE html>
<html ng-app="nodeApp">
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css"/>
</head>

<body>
<h1><%= title %></h1>
<div id="links_to_other_pages">
    <a ng-click="redirectToUpdate()" href="">Update</a>
    <a ng-click="redirectToRemove()" href="">Remove</a>
</div>
<div id="user_list_container" ng-controller="userListController">
    <div id="user_list">
        <table id="users_list_table" align="center">
            <th>Name</th>
            <th>Username</th>
            <th>Password</th>
            <tr ng-repeat="user in users">
                <td>{{ user.firstName }} {{ user.lastName }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
            </tr>
        </table>
    </div>
</div>
</body>

<!--libraries dependencies-->
<script type="text/javascript" src="/javascripts/lib/angular.min.js"></script>
<!-- angular controller dependencies-->
<script type="text/javascript" src="/javascripts/controllers/root-controller.js"></script>
<script type="text/javascript" src="/javascripts/controllers/user-list-controller.js"></script>
<!--angular service dependencies-->
<script type="text/javascript" src="/javascripts/services/apis-service.js"></script>
<script type="text/javascript" src="/javascripts/services/views-service.js"></script>
<script type="text/javascript" src="/javascripts/services/cookie-service.js"></script>
<script type="text/javascript" src="/javascripts/services/http-service.js"></script>

</html>