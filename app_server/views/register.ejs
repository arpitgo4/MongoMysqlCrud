<!DOCTYPE html>
<html ng-app="nodeApp">
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/stylesheets/style.css" />
    </head>

    <body>
        Welcome at <%= title %>
        <div id="registration_form_container_div" ng-controller="registerController">
            <form id="registration_form">
                <p>First Name : </p><input type="text" name="firstName" ng-model="user.firstName" />
                <p>Last Name : </p><input type="text" name="lastName" ng-model="user.lastName" />
                <p>Username : </p><input type="text" name="username" ng-model="user.username" />
                <p>Password : </p><input type="password" name="password" ng-model="user.password" />
                <p>Confirm Password : </p><input type="password" name="confirm_password" ng-model="confirmPassword" />
                <input type="submit" ng-click="register()" value="Register" />
            </form>
            <p id="after_register_response">{{ response }}</p>
        </div>
    </body>

    <!--libraries dependencies-->
    <script type="text/javascript" src="/javascripts/lib/angular.min.js"></script>
    <!-- angular controller dependencies-->
    <script type="text/javascript" src="/javascripts/controllers/root-controller.js"></script>
    <script type="text/javascript" src="/javascripts/controllers/register-controller.js"></script>
    <!--angular service dependencies-->
    <script type="text/javascript" src="/javascripts/services/apis-service.js"></script>
    <script type="text/javascript" src="/javascripts/services/cookie-service.js"></script>
    <script type="text/javascript" src="/javascripts/services/http-service.js"></script>

</html>