<!DOCTYPE html>
<html ng-app="nodeApp">
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
<h1><%= title %></h1>
<div id="registration_form_container_div" ng-controller="registerController">
    <form id="registration_form">
        <input ng-required="true" type="text" placeholder="First Name" name="firstName" ng-model="user.firstName" /><br>
        <input ng-required="true" type="text" placeholder="Last Name" name="lastName" ng-model="user.lastName" /><br>
        <input ng-required="true" type="text" placeholder="Username" name="username" ng-model="user.username" /><br>
        <select ng-required="true" type="text" name="company" ng-model="user.company" >
            <option ng-repeat="company in companies" value="{{company.company_id}}">{{company.companyName}}</option>
        </select>
        <select ng-required="true" type="text" name="country" ng-model="user.country" >
            <option ng-repeat="country in countries" value="{{country.country_id}}">{{country.countryName}}</option>
        </select><br>
        <input ng-required="true" type="password" placeholder="Password" name="password" ng-model="user.password" /><br>
        <input ng-required="true" type="password" placeholder="Confirm Password" name="confirm_password" ng-model="confirmPassword" />
        <p></p><input type="submit" ng-click="register()" value="Register" />
    </form>
    <p id="after_register_response">{{ response }}</p>
</div>
</body>

<!--libraries dependencies-->
<script type="text/javascript" src="/javascripts/lib/angular.min.js"></script>
<!-- angular controller dependencies-->
<script type="text/javascript" src="/javascripts/controllers/root-controller.js"></script>
<script type="text/javascript" src="/javascripts/controllers/register-sp-controller.js"></script>
<!--angular service dependencies-->
<script type="text/javascript" src="/javascripts/services/apis-service.js"></script>
<script type="text/javascript" src="/javascripts/services/views-service.js"></script>
<script type="text/javascript" src="/javascripts/services/cookie-service.js"></script>
<script type="text/javascript" src="/javascripts/services/http-service.js"></script>

</html>